<Window x:Class="GroupedApp.ModifyProjectName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupedApp"
        mc:Ignorable="d" Height="95"  Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="ProjectNameEntry" Grid.ColumnSpan="2"/>
        <Button Content="Delete Project" Click="Delete" Background="DarkBlue" Foreground="LightGray" Grid.Row="2"/>
        <Button Content="Confirm" Click="Confirm" Background="DarkBlue" Foreground="LightGray" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
