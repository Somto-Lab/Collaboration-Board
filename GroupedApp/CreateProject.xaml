<Window x:Class="GroupedApp.CreateProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupedApp"
        mc:Ignorable="d" Height="200" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ListBox Name="ProjectList" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" FontSize="16"/>
        <Button Content="Create New" Click="New"  Background="DarkBlue" Foreground="LightGray" Grid.Row="4"/>
        <Button Content="Load Project" Click="Load" Background="DarkBlue" Foreground="LightGray" Grid.Column="1" Grid.Row="4"/>
    </Grid>
</Window>
